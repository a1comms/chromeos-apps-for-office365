{
    "manifest_version": 3,
    "name": "Microsoft Outlook Chrome OS Notifications",
    "version": "0.3",
    "description": "A tool to add an app badge on Chrome OS",
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "256": "images/outlookIcon.png"
    },
    "permissions": [
        "alarms",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "https://outlook.office.com/*",
        "https://outlook.office365.com/*"
    ]
}