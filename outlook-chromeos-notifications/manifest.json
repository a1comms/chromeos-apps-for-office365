{
    "manifest_version": 3,
    "name": "Badge Notifications for Outlook PWA",
    "version": "1.2",
    "description": "A tool to add a pending notification app badge (tested on Chrome OS)",
    "content_scripts": [
        {
            "matches": [
                "https://outlook.office.com/*",
                "https://outlook.office365.com/*"
            ],
            "js": [
                "content-script.js"
            ]
        }
    ],
    "icons": {
        "256": "images/outlookIcon.png"
    }
}