{
    "manifest_version": 3,
    "name": "MS Teams Chrome OS Notifications",
    "version": "1.0",
    "description": "A tool to add an app badge on Chrome OS",
    "content_scripts": [
        {
            "matches": [
                "https://*.teams.microsoft.com/*",
                "https://*.teams.microsoft.com.mcas.ms/*"
            ],
            "js": [
                "content-script.js"
            ]
        }
    ],
    "icons": {
        "16": "images/teamsIcon.png",
        "128": "images/teamsIcon.png"
    }
}