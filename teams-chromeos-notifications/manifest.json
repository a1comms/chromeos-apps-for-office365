{
    "manifest_version": 3,
    "name": "Microsoft Teams Chrome OS Notifications",
    "version": "0.1",
    "description": "A tool to add an app badge on Chrome OS",
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "images/teamsIcon.png",
        "128": "images/teamsIcon.png"
    },
    "permissions": [
        "alarms",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "https://*.teams.microsoft.com/*",
        "https://*.teams.microsoft.com.mcas.ms/*"
    ]
}